<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat android:layout_gravity="" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#9F91D3"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="1dp"
            card_view:cardBackgroundColor="#E1DEDC"
            card_view:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/result"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#17202A"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/clear"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="C">
            </Button>
            <Button
                android:id="@+id/average"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="A"
                >
            </Button>
            <Button
                android:id="@+id/memory"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="M"
                >
            </Button>
            <Button
                android:id="@+id/div"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="/"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/num7"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="7"
                >
            </Button>
            <Button
                android:id="@+id/num8"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="8"
                >
            </Button>
            <Button
                android:id="@+id/num9"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="9"
                >
            </Button>
            <Button
                android:id="@+id/mul"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="*"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/num4"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="4"
                >
            </Button>
            <Button
                android:id="@+id/num5"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="5"
                >
            </Button>
            <Button
                android:id="@+id/num6"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="6"
                >
            </Button>
            <Button
                android:id="@+id/sub"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="-"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/num1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="1"
                >
            </Button>
            <Button
                android:id="@+id/num2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="2"
                >
            </Button>
            <Button
                android:id="@+id/num3"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="3"
                >
            </Button>
            <Button
                android:id="@+id/sum"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="18dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="+"
                >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/per"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="%"
                >
            </Button>
            <Button
                android:id="@+id/zero"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="0"
                >
            </Button>
            <Button
                android:id="@+id/dot"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="."
                >
            </Button>
            <Button
                android:id="@+id/equal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="="
                >
            </Button>
        </LinearLayout>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>